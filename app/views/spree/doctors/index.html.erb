<h1>Listing spree_doctors</h1>

<table>
  <thead>
    <tr>
      <th>Clinic</th>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Phone</th>
      <th>Is for instance booking</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spree_doctors.each do |spree_doctor| %>
      <tr>
        <td><%= spree_doctor.clinic %></td>
        <td><%= spree_doctor.user %></td>
        <td><%= spree_doctor.name %></td>
        <td><%= spree_doctor.description %></td>
        <td><%= spree_doctor.phone %></td>
        <td><%= spree_doctor.is_for_instance_booking %></td>
        <td><%= link_to 'Show', spree_doctor %></td>
        <td><%= link_to 'Edit', edit_spree_doctor_path(spree_doctor) %></td>
        <td><%= link_to 'Destroy', spree_doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

