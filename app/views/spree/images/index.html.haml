.row
  .col-xs-12
    %h1 Photos
    .panel.panel-default
      .panel-heading New image
      .panel-body
        .form-inline.margin-bottom
          = form_for Spree::Image.new, url: @action, html: {class: 'form-inline'} do |f|
            .form-group
              = f.file_field :attachment, class: 'form-control'
            .form-group
              = f.submit 'Upload'
    .row
      = render @images
        