<%= form_for([:account, @spree_clinic]) do |f| %>
  <% if @spree_clinic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@spree_clinic.errors.count, "error") %> prohibited this spree_clinic from being saved:</h2>

      <ul>
      <% @spree_clinic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <%= f.fields_for :suburb do |sf| %>
    <p>
      <%= sf.label :city_id %><br />
      <%= sf.select :city_id, options_from_collection_for_select(Spree::City.all, "id", "name"), prompt: 'Choose a city please...' %>
    </p>
    <p>
      <%= sf.label :name %><br /> 
      <%= sf.text_field :name %>
    </p>
  <% end %>
  <p>
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </p>
  <p>
    <%= f.label :building %><br>
    <%= f.text_field :building %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :clinic_type_id %><br>
    <%= f.select :clinic_type_id, options_from_collection_for_select(Spree::ClinicType.all, :id, :name) %>
  </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
