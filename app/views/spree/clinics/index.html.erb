<h1>Your Clinics</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Description</th>
      <th>Clinic type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spree_clinics.each do |spree_clinic| %>
      <tr>
        <td><%= spree_clinic.full_address %></td>
        <td><%= spree_clinic.description %></td>
        <td><%= spree_clinic.clinic_type.name %></td>
        <td><%= link_to 'Show', spree_clinic %></td>
        <td><%= link_to 'Edit', spree.edit_clinic_path(spree_clinic) %></td>
        <td><%= link_to 'Destroy', spree_clinic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

