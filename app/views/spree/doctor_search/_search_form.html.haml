%div{:role => "tabpanel"}
  %ul.nav.nav-tabs{:role => "tablist"}
    %li{:class => "#{active_nav_tab 'specialty'}", :role => "presentation"}= link_to 'by specialty', '#specialty', data: { toggle: 'tab' }
    %li{:class => "#{active_nav_tab 'doctor'}", :role => "presentation"}= link_to 'by doctor', '#doctor', data: { toggle: 'tab' }
    %li{:class => "#{active_nav_tab 'clinic'}", :role => "presentation"}= link_to 'by clinic', '#clinic', data: { toggle: 'tab' }
  .tab-content
    #specialty{:class => "tab-pane #{active_nav_tab 'specialty'}"}
      = form_tag doctor_search_results_path, id: 'by_spec', method: :get, class: 'form-inline' do
        = select_tag :ds, options_from_collection_for_select(Spree::Specialty.all, :id, :name, params[:ds]), { prompt: 'Choose specialtyâ€¦', class: 'form-control' }
        = text_field_tag :dl, params[:dl], placeholder: 'Location', class: 'form-control'
        = hidden_field_tag :search_for, 'specialty'
        = submit_tag 'Go', name: nil, class: 'btn btn-primary'
    #doctor{:class => "tab-pane #{active_nav_tab 'doctor'}"}
      = form_tag doctor_search_results_path, id: 'by_name', method: :get, class: 'form-inline' do
        = text_field_tag :dn, params[:dn], placeholder: 'Doctor name', class: 'form-control'
        = hidden_field_tag :search_for, 'doctor'
        = submit_tag 'Go', name: nil, class: 'btn btn-primary'
    #clinic{:class => "tab-pane #{active_nav_tab 'clinic'}"}
      = form_tag doctor_search_results_path, id: 'by_clinic', method: :get, class: 'form-inline' do
        = text_field_tag :cn, params[:cn], placeholder: 'Clinic name', class: 'form-control'
        = hidden_field_tag :search_for, 'clinic'
        = submit_tag 'Go', name: nil, class: 'btn btn-primary'
