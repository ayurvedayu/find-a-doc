<div role="tabpanel">
	<ul class="nav nav-tabs" role="tablist">
		<li role="presentation" class="<%= active_nav_tab 'specialty'%>"><%= link_to 'by specialty', '#specialty', data: { toggle: 'tab' } %></li>
		<li role="presentation" class="<%= active_nav_tab 'doctor'%>"><%= link_to 'by doctor', '#doctor', data: { toggle: 'tab' } %></li>
		<li role="presentation" class="<%= active_nav_tab 'clinic'%>"><%= link_to 'by clinic', '#clinic', data: { toggle: 'tab' } %></li>
	</ul>

	<div class="tab-content">
		<div class="tab-pane <%= active_nav_tab 'specialty'%>" id='specialty'>
			<p><%= form_tag doctor_search_results_path, id: 'by_spec', method: :get do %>
			  <%= select_tag :ds, options_from_collection_for_select(Spree::Specialty.all, :id, :name, params[:ds]), prompt: 'Choose specialtyâ€¦' %>
			  <%= text_field_tag :dl, params[:dl], placeholder: 'Location' %>
			  <%= hidden_field_tag :search_for, 'specialty' %>
				<%= submit_tag 'Go', name: nil %>
			<% end %></p>
		</div>
		<div class="tab-pane <%= active_nav_tab 'doctor'%>" id='doctor'>
			<p><%= form_tag doctor_search_results_path, id: 'by_name', method: :get do %>
			  <%= text_field_tag :dn, params[:dn], placeholder: 'Doctor name' %>
			  <%= hidden_field_tag :search_for, 'doctor' %>
			  <%= submit_tag 'Go', name: nil %>
			<% end %></p>
		</div>
		<div class="tab-pane <%= active_nav_tab 'clinic'%>" id='clinic'>
			<p><%= form_tag doctor_search_results_path, id: 'by_clinic', method: :get do %>
			  <%= text_field_tag :cn, params[:cn], placeholder: 'Clinic name' %>
			  <%= hidden_field_tag :search_for, 'clinic' %>
			  <%= submit_tag 'Go', name: nil %>
			<% end %></p>
		</div>
	</div>
</div>