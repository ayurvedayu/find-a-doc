<h1>Your appointments</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Email</th>
      <th>Cause</th>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spree_appointments.each do |spree_appointment| %>
      <tr>
        <td><%= spree_appointment.status %></td>
        <td><%= spree_appointment.name %></td>
        <td><%= spree_appointment.phone %></td>
        <td><%= spree_appointment.address %></td>
        <td><%= spree_appointment.email %></td>
        <td><%= spree_appointment.cause %></td>
        <td><%= spree_appointment.payment %></td>
        <td><%= link_to 'Show', [:account,spree_appointment] %></td>
        <td><%= link_to 'Edit', edit_account_appointment_path(spree_appointment) %></td>
        <td><%= link_to 'Destroy', [:account,spree_appointment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

